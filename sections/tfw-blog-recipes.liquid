{{ 'section-main-blog.css' | asset_url | stylesheet_tag }}

<div class='main-blog page-width !x-py-10 lg:!x-py-20'>
  <div class='x-flex x-gap-10 lg:x-gap-16 x-items-center'>
    <div
      class='cta__image x-w-full x-rounded-[24px] x-pb-[35%] x-!bg-cover !x-inline-grid x-max-w-[912px] lg:x-min-h-[490px]'
      style='background:url({{ blog.metafields.custom.featured_image | image_url }}{{ blog.metafields.custom.featured_image.width }}) no-repeat center center'
    ></div>
    <div class='x-grid x-justify-items-start'>
      {% render 'tfw-breadcrumbs' %}
      <h1>{{ blog.title | escape }}</h1>
    </div>
  </div>
  <div>
    {%- paginate blog.articles by 6 -%}
      <div class='blog-articles {% if section.settings.layout == 'collage' %}blog-articles--collage{% endif %}'>
        {%- for article in blog.articles -%}
          <div class='blog-articles__article article'>
            {%- render 'tfw-recipe-card', article: article -%}
          </div>
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
        {%- render 'pagination', paginate: paginate -%}
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</div>

{% schema %}
{
  "name": "Recipes",
  "tag": "section",
  "class": "recipes",
  "settings": []
}
{% endschema %}
