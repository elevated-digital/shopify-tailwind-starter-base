<section class='content-chunk__home-hero-banner x-flex x-items-center x-relative x-py-16'>
  <div class='page-width x-w-full'>
    <div class='content__top x-grid x-grid-cols-2 x-gap-10 x-items-center'>
      <img
        loading='eager'
        class='x-max-auto'
        src='{{ section.settings.banner_image | image_url: width: 700 }}'
        alt='{{ section.settings.banner_image.alt | escape }}'
        width='{{ section.settings.banner_image.width }}'
        height='{{ section.settings.banner_image.height }}'
      >
      <div>
        <div class='x-grid x-max-w-[540px]'>
          {% render 'tfw-breadcrumbs' %}
          <h1 class='x-leading-[1.1] x-mb-8 x-max-w-[450px]'>{{ section.settings.heading }}</h1>
          <div class='global-p__wrapper x-max-w-[800px] x-mx-auto'>
            {{ section.settings.hero_text }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "home_hero",
  "settings": [
    {
      "type": "header",
      "content": "Hero"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "hero_text",
      "label": "Text",
      "default": "<p>Welcome to my shop!</p>"
    }
  ]
}
{% endschema %}
