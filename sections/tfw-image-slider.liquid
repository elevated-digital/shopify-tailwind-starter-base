{{ 'owl-carousel.css' | asset_url | stylesheet_tag }}
{{ 'tfw-owl-carousel.css' | asset_url | stylesheet_tag }}

<section class='content-chunk__tfw-image-slideer x-relative x-overflow-hidden x-py-16'>
  <div class='page-width !x-max-w-[1200px]'>
    {% if section.blocks.size > 0 %}
      <div class='owl-carousel owl-theme'>
        {% for block in section.blocks %}
          <div class='image-slider__slide'>
            <img
              loading='lazy'
              class='x-rounded-[24px]'
              src='{{ block.settings.image_slide | image_url: width: block.settings.image_slide.width }}'
              alt='{{ block.settings.image_slide.alt | escape }}'
              width='{{ block.settings.image_slide.width }}'
              height='{{ block.settings.image_slide.height }}'
            >
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<script src='{{ 'owl-carousel.js' | asset_url }}' defer='defer'></script>
{% javascript %}
  document.addEventListener('DOMContentLoaded', function () {
    jQuery(function ($) {
      // Owl Carousel
      $('.owl-carousel').owlCarousel({
        center: true,
        items: 1,
        loop: true,
        margin: 10,
        responsive: {
          950: {
            margin: 0,
          },
        },
      });
    });
  });
{% endjavascript %}

{% schema %}
{
  "name": "TFW Image Slider",
  "tag": "section",
  "class": "image_slider",
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_slide",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
