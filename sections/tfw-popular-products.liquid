{{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

<section class='content-chunk__popular-products x-bg-framer-cream x-py-20 x-rounded-[64px]'>
  <div class='page-width x-w-full'>
    <div class='x-mb-16'>
      <div class='x-flex x-items-center x-justify-between'>
        {% render 'tfw-h2-with-flower' %}
        <a class='tfw-btn__main' href='{{ section.settings.button_link }}'>
          {{ section.settings.button_text }}
          {% render 'icon-tfw-green-arrow' %}
        </a>
      </div>
    </div>
    <div>
      <ul
        id='product-grid'
        data-id='{{ section.id }}'
        class='x-grid x-grid-cols-2 x-gap-x-4 lg:!x-gap-x-8 lg:x-grid-cols-4'
      >
        {%- for product in section.settings.product_list -%}
          {% assign lazy_load = false %}
          {%- if forloop.index > 2 -%}
            {%- assign lazy_load = true -%}
          {%- endif -%}
          <li
            class='{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
            data-cascade
          >
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              lazy_load: lazy_load,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Popular Products",
  "tag": "section",
  "class": "popular_products",
  "settings": [
    {
      "type": "header",
      "content": "Content Top"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Content Bottom"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "Products",
      "limit": 4
    }
  ]
}
{% endschema %}
